@model IEnumerable<Punto_de_ventaMVC.Views.ViewsModels.InventarioVM>
@{
    ViewData["Title"] = "Inventarios";
}

<h1>@ViewData["Title"]</h1>

<a href="@Url.Action("AltaInventario", "Inventario")" class="btn btn-primary my-3">Agregar Inventario</a>


<table class="table table-striped table-bordered table-hover dataTableJS">
    <thead>
        <tr>
            <th hidden>ID</th>
            @* <th>Codigo</th> *@
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Tipo</th>
            <th>Fecha Inventario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inventario in Model)
        {
            <tr>
                <td hidden>@inventario.id_inventario</td>
                @* <td>@inventario.codigo</td> *@
                <td>@inventario.producto</td>
                <td>@inventario.cantidad</td>
                <td>@inventario.tipo</td>
                <td>@inventario.fecha_inventario?.ToString("dd/MM/yyyy")</td>
                <td class="d-flex justify-content-center align-items-center">
                    <a href="@Url.Action("ModificarInventario", "Inventario", new { id = inventario.id_inventario })" class="btn btn-primary text-white m-1"><i class="bi bi-pencil-square"></i></a>
                    <a href="@Url.Action("BajarInventario", "Inventario", new { id = inventario.id_inventario })" class="btn btn-danger text-white m-1"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
