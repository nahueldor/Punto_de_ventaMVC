@model IEnumerable<Punto_de_ventaMVC.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<h1>@ViewData["Title"]</h1>
<a href="@Url.Action("AltaProducto", "Producto")" class="btn btn-primary my-3">Agregar Producto</a>

<table class="table table-striped table-bordered table-hover dataTableJS">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th>Precio de Compra</th>
            <th>Precio de Venta</th>
            <th>Código</th>
            <th>Stock Mínimo</th>
            <th>Stock Máximo</th>
            <th>Tipo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td hidden>@producto.id_producto</td>
                <td>@producto.nombre</td>
                <td>@producto.precio_compra</td>
                <td>@producto.precio_venta</td>
                <td>@producto.codigo</td>
                <td>@producto.minimo</td>
                <td>@producto.maximo</td>
                <td>@producto.tipo</td>
                <td>
                    <a href="@Url.Action("ModificarProducto", "Producto", new { id = producto.id_producto })" class="btn btn-warning text-white"><i class="bi bi-pencil-square"></i></a>
                    <a href="@Url.Action("BajarProducto", "Producto", new { id = producto.id_producto })" class="btn btn-danger text-white"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>