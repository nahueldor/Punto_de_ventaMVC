@model IEnumerable<Punto_de_ventaMVC.Views.ViewsModels.ProductoVM>

@{
    ViewData["Title"] = "Listado de Productos";
}

<h1>@ViewData["Title"]</h1>
<a href="@Url.Action("AltaProducto", "Producto")" class="btn btn-primary my-3">Agregar Producto</a>

<table class="table table-striped table-bordered table-hover dataTableJS">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th>Precio de Compra (Peso)</th>
            <th>Precio de Compra (Dolar)</th>
            <th>Precio de Venta (Peso)</th>
            <th>Precio de Venta (Dolar)</th>
            @* <th>Código</th> *@
            <th>Stock Mínimo</th>
            <th>Stock Máximo</th>
            <th>Tipo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td hidden>@producto.id_producto</td>
                <td>@producto.nombre</td>
                <td>@producto.precio_compra_peso$</td>
                <td>@String.Format("{0:F2}", producto.precio_compra_dolar)$</td>
                <td>@producto.precio_venta_peso$</td>
                <td>@String.Format("{0:F2}", producto.precio_venta_dolar)$</td>
                @* <td>@producto.codigo</td> *@
                <td>@producto.minimo</td>
                <td>@producto.maximo</td>
                <td>@producto.tipo</td>
                <td class="d-flex justify-content-center align-items-center">
                    <a href="@Url.Action("ModificarProducto", "Producto", new { id = producto.id_producto })" class="btn btn-primary text-white m-1"><i class="bi bi-pencil-square"></i></a>
                    <a href="@Url.Action("BajarProducto", "Producto", new { id = producto.id_producto })" class="btn btn-danger text-white m-1"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>