@model Punto_de_ventaMVC.Views.ViewsModels.DatailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la Venta</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.venta.numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.venta.numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.venta.fecha_facturacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.venta.fecha_facturacion)
        </dd>
    </dl>
</div>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.productosDetalle)
        {
            <tr>
                <td>@item.producto.nombre</td>
                <td>@item.detalle.cantidad</td>
                <td>@item.producto.precio_venta</td>
                <td>@item.detalle.precio</td>
            </tr>
        }
        <tr style="border-bottom: 2px solid black;"></tr>
        <tr>
            <td></td>
            <td></td>
            <td class="text-end"><b>Subtotal:</b></td>
            <td>@Model.venta.subtotal</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td class="text-end"><b>ISV (15%):</b></td>
            <td>+ @Model.venta.isv</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td class="text-end"><b>Descuento (@(Model.venta.descuento)%):</b></td>
            <td>- @Convert.ToDecimal(Convert.ToDouble(Model.venta.subtotal) * (Convert.ToDouble(Model.venta.descuento) * 0.01))</td>
        </tr>
        <tr style="border-bottom: 2px solid black;"></tr>
        <tr>
            <td></td>
            <td></td>
            <td class="text-end"><b>Total:</b></td>
            <td>@Model.venta.total</td>
        </tr>
    </tbody>
</table>

<div>
    <a href="@Url.Action("Index", "Ventas")" class="btn btn-secondary my-3">Volver</a>
</div>
