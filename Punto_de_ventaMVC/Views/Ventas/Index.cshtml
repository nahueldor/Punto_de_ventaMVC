@model IEnumerable<Punto_de_ventaMVC.Views.ViewsModels.VentaVM>

@{
    ViewData["Title"] = "Listado de Ventas";
}

<h1>@ViewData["Title"]</h1>

<a href="@Url.Action("AltaVenta", "Ventas")" class="btn btn-primary my-3">Nueva Venta</a>

<table class="table table-striped table-bordered table-hover dataTableJS">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Numero</th>
            <th>Cliente</th>
            <th>Usuario</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>SubTotoal</th>
            <th>ISV</th>
            <th>Descuento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td hidden>@venta.id_factura</td>
                <td>@venta.numero</td>
                <td>@venta.cliente</td>
                <td>@venta.usuario</td>
                <td>@venta.fecha</td>
                <td>@venta.total</td>
                <td>@venta.subtotal</td>
                <td>@venta.isv</td>
                <td>@venta.descuento%</td>
                <td>
                        <a href="@Url.Action("Edit", "Ventas", new { id = @venta.id_factura })" class="btn btn-primary text-white"><i class="bi bi-pencil-square"></i></a>
                        <a href="@Url.Action("Details", "Ventas", new { id = @venta.id_factura })" class="btn btn-info text-white"><i class="bi bi-search"></i></a>
                        <a href="@Url.Action("Delete", "Ventas", new { id = @venta.id_factura })" class="btn btn-danger text-white"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>