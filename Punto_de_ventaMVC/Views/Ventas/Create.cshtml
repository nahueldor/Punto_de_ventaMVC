@model Punto_de_ventaMVC.Models.FacturaViewModel

@{
    ViewData["Title"] = "Crear Venta";
}

<h2>Crear Venta</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Cliente</label>
        <select asp-for="Venta.cliente" asp-items="Model.Clientes" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Usuario</label>
        <select asp-for="Venta.usuario" asp-items="Model.Usuarios" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Número de Factura</label>
        <input asp-for="Venta.numero" class="form-control" />
    </div>

    <div class="form-group">
        <label>Fecha</label>
        <input asp-for="Venta.fecha_facturacion" class="form-control" readonly />
    </div>

    <hr />
    <h4>Agregar Productos</h4>
    <div class="row mb-2">
        <div class="col-md-5">
            <select id="producto" class="form-control">
                @foreach (var p in Model.Productos)
                {
                    <option value="@p.Value">@p.Text</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <input type="number" id="cantidad" class="form-control" placeholder="Cantidad" />
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-success" onclick="agregarItem()">Agregar</button>
        </div>
    </div>

    <table class="table table-bordered" id="tablaItems">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div class="form-group">
        <label>Subtotal</label>
        <input asp-for="Venta.subtotal" id="subtotal" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>ISV (15%)</label>
        <input asp-for="Venta.isv" id="isv" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Descuento</label>
        <input asp-for="Venta.descuento" id="descuento" class="form-control" value="0" />
    </div>
    <div class="form-group">
        <label>Total</label>
        <input asp-for="Venta.total" id="total" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Factura</button>
</form>

@section Scripts {
    <script>
        let detalles = [];

        function agregarItem() {
            const productoId = document.getElementById("producto").value;
            const productoNombre = document.getElementById("producto").selectedOptions[0].text;
            const cantidad = parseInt(document.getElementById("cantidad").value);

            if (!cantidad || cantidad <= 0) {
                alert("Cantidad inválida");
                return;
            }

            detalles.push({ producto: productoId, cantidad: cantidad, nombre: productoNombre });
            renderTabla();
            calcularTotales();
        }

        function eliminarItem(index) {
            detalles.splice(index, 1);
            renderTabla();
            calcularTotales();
        }

        function renderTabla() {
            const tbody = document.querySelector("#tablaItems tbody");
            tbody.innerHTML = "";

            detalles.forEach((item, index) => {
                const row = `<tr>
                    <td>${item.nombre}</td>
                    <td>${item.cantidad}</td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" onclick="eliminarItem(${index})">Eliminar</button>
                    </td>
                    <input type="hidden" name="Detalles[${index}].producto" value="${item.producto}" />
                    <input type="hidden" name="Detalles[${index}].cantidad" value="${item.cantidad}" />
                </tr>`;
                tbody.innerHTML += row;
            });
        }

        function calcularTotales() {
            let subtotal = detalles.reduce((sum, item) => sum + (item.cantidad * 100), 0); // Simula precio 100
            let isv = subtotal * 0.15;
            let descuento = parseFloat(document.getElementById("descuento").value) || 0;
            let total = subtotal + isv - descuento;

            document.getElementById("subtotal").value = subtotal.toFixed(2);
            document.getElementById("isv").value = isv.toFixed(2);
            document.getElementById("total").value = total.toFixed(2);
        }

        document.getElementById("descuento").addEventListener("input", calcularTotales);
    </script>
}
