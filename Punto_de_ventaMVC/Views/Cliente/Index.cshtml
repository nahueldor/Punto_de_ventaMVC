@model IEnumerable<Punto_de_ventaMVC.Models.Cliente>

@{
    ViewData["Title"] = "Listado de Clientes";
}

<h1>@ViewData["Title"]</h1>
<a href="@Url.Action("AltaCliente", "Cliente")" class="btn btn-primary my-3">Agregar Cliente</a>

<table class="table table-striped table-bordered table-hover dataTableJS">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Identidad</th>
            <th>Dirección</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td hidden>@cliente.id_cliente</td>
                <td>@cliente.nombre</td>
                <td>@cliente.apellido</td>
                <td>@cliente.telefono</td>
                <td>@cliente.identidad</td>
                <td>@cliente.direccion</td>
                <td class="d-flex justify-content-center align-items-center">
                    <a href="@Url.Action("ModificarCliente", "Cliente", new { id = cliente.id_cliente })" class="btn btn-primary text-white m-1"><i class="bi bi-pencil-square"></i></a>
                    <a href="@Url.Action("BajarCliente", "Cliente", new { id = cliente.id_cliente })" class="btn btn-danger text-white m-1"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>