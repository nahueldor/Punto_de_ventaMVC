@model Punto_de_ventaMVC.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<link rel="stylesheet" href="~/css/styles.css" />

<h1>@ViewData["Title"]</h1>

<div class="row">

    <form asp-action="ModificarCliente" method="post">
        @Html.AntiForgeryToken()

        <div class="container m-0 p-0">
            <div class="row">
                <input asp-for="@Model.id_cliente" class="form-control" id="id_cliente" type="text" required hidden />

                <div class="col-6">
                    <div class="form-group my-2">
                        <label for="nombre">Nombre</label>
                        <input asp-for="@Model.nombre" class="form-control" id="nombre" type="text" required maxlength="50" />
                        <span asp-validation-for="@Model.nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group my-2">
                        <label for="apellido">Apellido</label>
                        <input asp-for="@Model.apellido" class="form-control" id="apellido" type="text" required maxlength="50" />
                        <span asp-validation-for="@Model.apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group my-2">
                        <label for="telefono">Teléfono</label>
                        <input asp-for="@Model.telefono" class="form-control" id="telefono" type="text" maxlength="50" />
                        <span asp-validation-for="@Model.telefono" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group my-2">
                        <label for="identidad">N° Identidad</label>
                        <input asp-for="@Model.identidad" class="form-control" id="identidad" type="text" maxlength="50" />
                        <span asp-validation-for="@Model.identidad" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label for="direccion">Dirección</label>
                        <input asp-for="@Model.direccion" class="form-control" id="direccion" type="text" maxlength="100" />
                        <span asp-validation-for="@Model.direccion" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary my-2">Editar Cliente</button>
        <a href="@Url.Action("Index", "Cliente")" class="btn btn-secondary my-3">Volver</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}